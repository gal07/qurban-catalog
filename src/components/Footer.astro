---
import { db } from "../lib/firebase";
import { doc, getDoc } from "firebase/firestore";

const currentYear = new Date().getFullYear();

// Default Data
let footerData = {
  address: "Perlu diisi",
  phone: "Perlu diisi",
  email: "Perlu diisi",
  description:
    "Mitra ibadah qurban terpercaya. Menyediakan hewan sehat, berkualitas, dan sesuai syariat untuk menyempurnakan ibadah Anda.",
  bottom: "QurbanBerkah. All rights reserved.",
  socialLinks: [] as Array<{ platform: string; url: string }>,
};

try {
  const [contactSnap, footerSnap, socialSnap] = await Promise.all([
    getDoc(doc(db, "content", "hubungi_kami")),
    getDoc(doc(db, "content", "footer")),
    getDoc(doc(db, "content", "social")),
  ]);

  if (contactSnap.exists()) {
    const data = contactSnap.data();
    footerData.address = data.address || footerData.address;
    footerData.phone = data.phone || footerData.phone;
    footerData.email = data.email || footerData.email;
  }

  if (footerSnap.exists()) {
    const data = footerSnap.data();
    footerData.description = data.description || footerData.description;
    footerData.bottom = data.bottom || footerData.bottom;
  }

  if (socialSnap.exists()) {
    const data = socialSnap.data();
    footerData.socialLinks = data.links || [];
  }
} catch (error) {
  console.error("Error fetching footer data:", error);
}

// Icon mapping for social media platforms
const socialIcons: Record<string, string> = {
  Facebook: `<path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>`,
  Instagram: `<rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>`,
  Twitter: `<path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-12.7 12.5S7.2 12.1 6.5 11.3c-4.7-2.8-1.1-7.1-0.2-7.5 1.6-1.6 4.3.4 5 1.6 4.6-2.5 8.9-6.3 10.7-5.4z"></path>`,
  WhatsApp: `<path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>`,
  YouTube: `<path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path><polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"></polygon>`,
  TikTok: `<path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5"></path>`,
  LinkedIn: `<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle>`,
};
---

<footer class="footer">
  <div class="container footer-container">
    <div class="footer-brand">
      <div class="footer-brand-logo mb-4">
        <img
          src="/logo.jpg"
          alt="Qurban Berkah Logo"
          class="h-16 w-auto rounded-lg"
        />
      </div>
      <p>
        {footerData.description}
      </p>
    </div>

    <div class="footer-contact">
      <h4>Hubungi Kami</h4>
      <ul class="contact-list">
        <li>
          <span class="icon">üìç</span>
          <span>{footerData.address}</span>
        </li>
        <li>
          <span class="icon">üìû</span>
          <span>{footerData.phone}</span>
        </li>
        <li>
          <span class="icon">üìß</span>
          <span>{footerData.email}</span>
        </li>
      </ul>
    </div>

    <div class="footer-social">
      <h4>Ikuti Kami</h4>
      <div class="social-links">
        {
          footerData.socialLinks.length > 0 ? (
            footerData.socialLinks.map((link) => (
              <a
                href={link.url}
                aria-label={link.platform}
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  set:html={socialIcons[link.platform] || ""}
                />
              </a>
            ))
          ) : (
            <p class="text-sm text-gray-400">
              No social media links configured
            </p>
          )
        }
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container">
      <div class="copyright">
        &copy; {currentYear}
        {footerData.bottom}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-primary-dark);
    color: white;
    padding-top: 5rem;
    font-size: 0.95rem;
  }

  .footer-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    padding-bottom: 4rem;
  }

  @media (min-width: 768px) {
    .footer-container {
      grid-template-columns: 2fr 1fr 1fr;
    }
  }

  .footer-logo {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: white; /* Override global h3 color */
  }

  .highlight {
    color: var(--color-accent);
  }

  h4 {
    color: var(--color-accent);
    margin-bottom: 1.5rem;
    font-size: 1.25rem;
  }

  .footer p {
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.8);
    max-width: 300px;
  }

  .contact-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .contact-list li {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .footer-social .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
    border-radius: 50%;
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    background-color: var(--color-accent);
    color: var(--color-primary-dark);
    transform: translateY(-3px);
  }

  .footer-bottom {
    background-color: rgba(0, 0, 0, 0.2);
    padding: 1.5rem 0;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .footer-bottom .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .admin-link a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s;
  }

  .admin-link a:hover {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .footer-bottom .container {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
