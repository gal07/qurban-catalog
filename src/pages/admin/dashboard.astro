---
import AdminLayout from "../../layouts/AdminLayout.astro";
---

<AdminLayout title="Dashboard Overview">
  <div class="max-w-7xl mx-auto space-y-8">
    <!-- Welcome Card -->
    <div
      class="bg-gradient-to-r from-sky-500 to-blue-600 rounded-2xl shadow-lg p-8 text-white relative overflow-hidden"
    >
      <div class="relative z-10">
        <h3 class="text-3xl font-bold mb-2">Selamat Datang di Qurban Admin</h3>
        <p class="text-sky-100 text-lg">
          Kelola inventaris hewan qurban dan pengaturan website Anda dari sini
          dengan mudah.
        </p>
      </div>
      <div
        class="absolute right-0 top-0 h-full w-1/3 bg-white/10 transform skew-x-12 -mr-16"
      >
      </div>
      <div
        class="absolute right-20 bottom-0 h-64 w-64 bg-white/5 rounded-full blur-3xl"
      >
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Total Hewan -->
      <div
        class="bg-white rounded-xl shadow-[0_2px_10px_-3px_rgba(6,81,237,0.1)] p-6 hover:shadow-md transition-shadow duration-300 border border-slate-100 group"
      >
        <div class="flex items-center space-x-4">
          <div
            class="p-3 bg-blue-50 text-blue-600 rounded-xl group-hover:bg-blue-600 group-hover:text-white transition-colors duration-300"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path
                d="M12 5c.67 0 1.35.09 2 .26 1.78-2 5.03-2.84 6.42-2.26 1.4.58-.42 7-.42 7 .57 1.07 1 2.24 1 3.44C21 17.9 16.97 21 12 21s-9-3.1-9-7.56c0-1.25.43-2.42 1-3.44 0 0-1.89-6.42-.5-7 1.39-.58 4.67.26 6.5 2.26.65-.17 1.33-.26 2-.26z"
              ></path></svg
            >
          </div>
          <div>
            <h4
              class="text-sm font-medium text-slate-500 uppercase tracking-wider"
            >
              Total Hewan
            </h4>
            <p
              id="total-animals"
              class="text-2xl font-bold text-slate-900 mt-1"
            >
              ...
            </p>
          </div>
        </div>
      </div>

      <!-- Tersedia -->
      <div
        class="bg-white rounded-xl shadow-[0_2px_10px_-3px_rgba(6,81,237,0.1)] p-6 hover:shadow-md transition-shadow duration-300 border border-slate-100 group"
      >
        <div class="flex items-center space-x-4">
          <div
            class="p-3 bg-emerald-50 text-emerald-600 rounded-xl group-hover:bg-emerald-600 group-hover:text-white transition-colors duration-300"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><polyline points="20 6 9 17 4 12"></polyline></svg
            >
          </div>
          <div>
            <h4
              class="text-sm font-medium text-slate-500 uppercase tracking-wider"
            >
              Tersedia
            </h4>
            <p
              id="available-animals"
              class="text-2xl font-bold text-slate-900 mt-1"
            >
              ...
            </p>
          </div>
        </div>
      </div>

      <!-- Terjual -->
      <div
        class="bg-white rounded-xl shadow-[0_2px_10px_-3px_rgba(6,81,237,0.1)] p-6 hover:shadow-md transition-shadow duration-300 border border-slate-100 group"
      >
        <div class="flex items-center space-x-4">
          <div
            class="p-3 bg-amber-50 text-amber-600 rounded-xl group-hover:bg-amber-600 group-hover:text-white transition-colors duration-300"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><line x1="12" x2="12" y1="2" y2="22"></line><path
                d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"
              ></path></svg
            >
          </div>
          <div>
            <h4
              class="text-sm font-medium text-slate-500 uppercase tracking-wider"
            >
              Terjual
            </h4>
            <p id="sold-animals" class="text-2xl font-bold text-slate-900 mt-1">
              ...
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions or Recents could go here later -->
  </div>
</AdminLayout>

<script src="./_dashboard.ts"></script>
