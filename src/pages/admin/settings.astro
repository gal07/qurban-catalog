---
import AdminLayout from "../../layouts/AdminLayout.astro";
---

<AdminLayout title="Pengaturan WhatsApp">
  <div class="max-w-3xl mx-auto">
    <div
      class="bg-white shadow-sm ring-1 ring-slate-900/5 rounded-xl p-6 sm:p-8"
    >
      <form id="settings-form" class="space-y-6">
        <!-- WhatsApp Number -->
        <div>
          <label
            for="wa-number"
            class="block text-sm font-medium text-slate-700 mb-1"
            >Nomor WhatsApp (628...)</label
          >
          <input
            type="text"
            id="wa-number"
            placeholder="628123456789"
            required
            class="block w-full rounded-lg border-slate-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm px-4 py-3 border"
          />
          <p class="mt-1 text-xs text-slate-500">
            Gunakan format internasional tanpa + (contoh: 62812xxx)
          </p>
        </div>

        <!-- Template Message -->
        <div>
          <label
            for="wa-template"
            class="block text-sm font-medium text-slate-700 mb-1"
            >Pesan Default</label
          >
          <textarea
            id="wa-template"
            rows="4"
            placeholder="Halo, saya tertarik dengan hewan qurban..."
            class="block w-full rounded-lg border-slate-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm px-4 py-3 border"
          ></textarea>
          <p class="mt-1 text-xs text-slate-500">
            Gunakan <code class="bg-slate-100 px-1 rounded text-slate-700"
              >{"{name}"}</code
            > untuk nama hewan dan <code
              class="bg-slate-100 px-1 rounded text-slate-700">{"{price}"}</code
            > untuk harga.
          </p>
        </div>

        <!-- Actions -->
        <div class="pt-4 border-t border-slate-100 flex justify-end">
          <button
            type="submit"
            id="save-settings-btn"
            class="inline-flex justify-center py-2.5 px-5 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 transition-colors"
          >
            Simpan Pengaturan
          </button>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>

<script src="./_settings.ts"></script>
