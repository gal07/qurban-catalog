---
import AdminLayout from "../../../layouts/AdminLayout.astro";
---

<AdminLayout title="Hubungi Kami">
    <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-4">
            Manage Hubungi Kami
        </h1>
        <p class="text-gray-600 mb-6">
            Edit contact information (Hubungi Kami) displayed in the footer.
        </p>

        <form id="contact-form" class="space-y-6 max-w-lg">
            <div>
                <label
                    for="address"
                    class="block text-sm font-medium text-gray-700 mb-1"
                >
                    Alamat
                </label>
                <textarea
                    id="address"
                    name="address"
                    rows="3"
                    class="w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2"
                    placeholder="Jl. Masjid Al-Huda No. 123..."></textarea>
            </div>

            <div>
                <label
                    for="phone"
                    class="block text-sm font-medium text-gray-700 mb-1"
                >
                    Nomor Telepon
                </label>
                <input
                    type="text"
                    id="phone"
                    name="phone"
                    class="w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2"
                    placeholder="+62 812-3456-7890"
                />
            </div>

            <div>
                <label
                    for="email"
                    class="block text-sm font-medium text-gray-700 mb-1"
                >
                    Email
                </label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    class="w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2"
                    placeholder="info@qurbanberkah.com"
                />
            </div>

            <div class="pt-4">
                <button
                    type="submit"
                    class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors"
                >
                    Simpan Perubahan
                </button>
            </div>
        </form>
    </div>
</AdminLayout>

<script>
    import { db } from "../../../lib/firebase";
    import { doc, getDoc, setDoc } from "firebase/firestore";

    const form = document.getElementById("contact-form") as HTMLFormElement;
    const addressInput = document.getElementById(
        "address",
    ) as HTMLTextAreaElement;
    const phoneInput = document.getElementById("phone") as HTMLInputElement;
    const emailInput = document.getElementById("email") as HTMLInputElement;

    // Load initial data
    async function loadData() {
        try {
            const docRef = doc(db, "content", "hubungi_kami");
            const docSnap = await getDoc(docRef);

            if (docSnap.exists()) {
                const data = docSnap.data();
                if (addressInput) addressInput.value = data.address || "";
                if (phoneInput) phoneInput.value = data.phone || "";
                if (emailInput) emailInput.value = data.email || "";
            }
        } catch (error) {
            console.error("Error loading data:", error);
            alert("Gagal memuat data. Silakan coba lagi.");
        }
    }

    loadData();

    // Handle submit
    form?.addEventListener("submit", async (e) => {
        e.preventDefault();

        const submitBtn = form.querySelector('button[type="submit"]');
        if (submitBtn) {
            submitBtn.textContent = "Menyimpan...";
            (submitBtn as HTMLButtonElement).disabled = true;
        }

        try {
            const data = {
                address: addressInput.value,
                phone: phoneInput.value,
                email: emailInput.value,
                updatedAt: new Date().toISOString(),
            };

            await setDoc(doc(db, "content", "hubungi_kami"), data);
            alert("Data berhasil disimpan!");
        } catch (error) {
            console.error("Error saving data:", error);
            alert("Gagal menyimpan data: " + (error as Error).message);
        } finally {
            if (submitBtn) {
                submitBtn.textContent = "Simpan Perubahan";
                (submitBtn as HTMLButtonElement).disabled = false;
            }
        }
    });
</script>
