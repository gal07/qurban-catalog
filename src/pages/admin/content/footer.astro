---
import AdminLayout from "../../../layouts/AdminLayout.astro";
---

<AdminLayout title="Footer Description">
    <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-4">
            Manage Footer Content
        </h1>
        <p class="text-gray-600 mb-6">
            Edit the footer description and copyright text.
        </p>

        <form id="footer-form" class="space-y-6 max-w-lg">
            <div>
                <label
                    for="description"
                    class="block text-sm font-medium text-gray-700 mb-1"
                >
                    Deskripsi
                </label>
                <textarea
                    id="description"
                    name="description"
                    rows="4"
                    class="w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2"
                    placeholder="Mitra ibadah qurban terpercaya..."></textarea>
                <p class="mt-1 text-sm text-gray-500">
                    Teks ini akan muncul di bawah logo di bagian footer.
                </p>
            </div>

            <div>
                <label
                    for="bottom"
                    class="block text-sm font-medium text-gray-700 mb-1"
                >
                    Copyright Text
                </label>
                <input
                    type="text"
                    id="bottom"
                    name="bottom"
                    class="w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2"
                    placeholder="QurbanBerkah. All rights reserved."
                />
                <p class="mt-1 text-sm text-gray-500">
                    Teks ini akan muncul setelah tahun di bagian bawah footer.
                </p>
            </div>

            <div class="pt-4">
                <button
                    type="submit"
                    class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors"
                >
                    Simpan Perubahan
                </button>
            </div>
        </form>
    </div>
</AdminLayout>

<script>
    import { db } from "../../../lib/firebase";
    import { doc, getDoc, setDoc } from "firebase/firestore";

    const form = document.getElementById("footer-form") as HTMLFormElement;
    const descriptionInput = document.getElementById(
        "description",
    ) as HTMLTextAreaElement;
    const bottomInput = document.getElementById("bottom") as HTMLInputElement;

    // Load initial data
    async function loadData() {
        try {
            const docRef = doc(db, "content", "footer");
            const docSnap = await getDoc(docRef);

            if (docSnap.exists()) {
                const data = docSnap.data();
                if (descriptionInput)
                    descriptionInput.value = data.description || "";
                if (bottomInput) bottomInput.value = data.bottom || "";
            }
        } catch (error) {
            console.error("Error loading data:", error);
            alert("Gagal memuat data. Silakan coba lagi.");
        }
    }

    loadData();

    // Handle submit
    form?.addEventListener("submit", async (e) => {
        e.preventDefault();

        const submitBtn = form.querySelector('button[type="submit"]');
        if (submitBtn) {
            submitBtn.textContent = "Menyimpan...";
            (submitBtn as HTMLButtonElement).disabled = true;
        }

        try {
            const data = {
                description: descriptionInput.value,
                bottom: bottomInput.value,
                updatedAt: new Date().toISOString(),
            };

            await setDoc(doc(db, "content", "footer"), data);
            alert("Data berhasil disimpan!");
        } catch (error) {
            console.error("Error saving data:", error);
            alert("Gagal menyimpan data: " + (error as Error).message);
        } finally {
            if (submitBtn) {
                submitBtn.textContent = "Simpan Perubahan";
                (submitBtn as HTMLButtonElement).disabled = false;
            }
        }
    });
</script>
