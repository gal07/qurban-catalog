---
import AdminLayout from "../../../layouts/AdminLayout.astro";
---

<AdminLayout title="Daftar Hewan Qurban">
    <div class="max-w-7xl mx-auto">
        <!-- Header & Actions -->
        <div
            class="flex flex-col sm:flex-row justify-between items-center mb-6 gap-4"
        >
            <div class="relative w-full sm:w-auto">
                <!-- Search could go here -->
            </div>
            <button
                id="open-add-modal"
                class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 w-full sm:w-auto transition-colors"
            >
                <svg
                    class="-ml-1 mr-2 h-5 w-5"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                >
                    <path
                        fill-rule="evenodd"
                        d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z"
                        clip-rule="evenodd"></path>
                </svg>
                Tambah Hewan
            </button>
        </div>

        <!-- Table Card -->
        <div
            class="bg-white shadow-sm ring-1 ring-slate-900/5 rounded-xl overflow-hidden"
        >
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200">
                    <thead class="bg-slate-50">
                        <tr>
                            <th
                                scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider w-20"
                                >Gbr</th
                            >
                            <th
                                scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider"
                                >Nama Hewan</th
                            >
                            <th
                                scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider"
                                >Jenis</th
                            >
                            <th
                                scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider"
                                >Berat</th
                            >
                            <th
                                scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider"
                                >Harga</th
                            >
                            <th
                                scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider"
                                >Status</th
                            >
                            <th scope="col" class="relative px-6 py-3">
                                <span class="sr-only">Aksi</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody
                        id="animal-list"
                        class="bg-white divide-y divide-slate-200"
                    >
                        <!-- Data injected here via Script -->
                    </tbody>
                </table>
            </div>

            <!-- Loading State -->
            <div id="loading" class="hidden p-12 text-center text-slate-500">
                <div
                    class="inline-block animate-spin rounded-full h-8 w-8 border-4 border-slate-200 border-t-blue-600 mb-2"
                >
                </div>
                <p>Memuat data...</p>
            </div>

            <!-- Pagination -->
            <div
                class="bg-slate-50 px-4 py-3 border-t border-slate-200 flex items-center justify-center sm:px-6"
            >
                <button
                    id="load-more-btn"
                    class="hidden inline-flex items-center px-4 py-2 border border-slate-300 shadow-sm text-sm font-medium rounded-md text-slate-700 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                >
                    Muat Lebih Banyak
                </button>
            </div>
        </div>
    </div>

    <!-- Add Animal Modal -->
    <div
        id="add-modal"
        class="fixed inset-0 z-50 hidden overflow-y-auto"
        aria-labelledby="modal-title"
        role="dialog"
        aria-modal="true"
    >
        <div
            class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0"
        >
            <div
                id="modal-backdrop"
                class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity opacity-0"
                aria-hidden="true"
            >
            </div>

            <span
                class="hidden sm:inline-block sm:align-middle sm:h-screen"
                aria-hidden="true">&#8203;</span
            >

            <div
                id="modal-panel"
                class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-2xl sm:w-full opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
            >
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div
                            class="mt-3 text-center sm:mt-0 sm:text-left w-full"
                        >
                            <h3
                                class="text-lg leading-6 font-medium text-slate-900"
                                id="modal-title"
                            >
                                Tambah Hewan Baru
                            </h3>

                            <form id="add-animal-form" class="mt-6 space-y-6">
                                <!-- Name -->
                                <div>
                                    <label
                                        for="name"
                                        class="block text-sm font-medium text-slate-700 mb-1"
                                        >Nama Hewan</label
                                    >
                                    <input
                                        type="text"
                                        id="name"
                                        required
                                        placeholder="Contoh: Sapi Limosin A"
                                        class="block w-full rounded-lg border-slate-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm px-4 py-2 border"
                                    />
                                </div>

                                <div
                                    class="grid grid-cols-1 sm:grid-cols-2 gap-4"
                                >
                                    <!-- Type -->
                                    <div>
                                        <label
                                            for="type"
                                            class="block text-sm font-medium text-slate-700 mb-1"
                                            >Jenis</label
                                        >
                                        <select
                                            id="type"
                                            required
                                            class="block w-full rounded-lg border-slate-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm px-4 py-2 border"
                                        >
                                            <option value="Sapi">Sapi</option>
                                            <option value="Kambing"
                                                >Kambing</option
                                            >
                                            <option value="Domba">Domba</option>
                                        </select>
                                    </div>

                                    <!-- Price -->
                                    <div>
                                        <label
                                            for="price"
                                            class="block text-sm font-medium text-slate-700 mb-1"
                                            >Harga (Rp)</label
                                        >
                                        <input
                                            type="number"
                                            id="price"
                                            required
                                            placeholder="25000000"
                                            class="block w-full rounded-lg border-slate-300 focus:border-sky-500 focus:ring-sky-500 sm:text-sm px-4 py-2 border"
                                        />
                                    </div>
                                </div>

                                <div
                                    class="grid grid-cols-1 sm:grid-cols-2 gap-4"
                                >
                                    <!-- Weight -->
                                    <div>
                                        <label
                                            for="weight"
                                            class="block text-sm font-medium text-slate-700 mb-1"
                                            >Berat (Kg)</label
                                        >
                                        <input
                                            type="number"
                                            id="weight"
                                            required
                                            placeholder="350"
                                            class="block w-full rounded-lg border-slate-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm px-4 py-2 border"
                                        />
                                    </div>

                                    <!-- Status -->
                                    <div>
                                        <label
                                            for="available"
                                            class="block text-sm font-medium text-slate-700 mb-1"
                                            >Status</label
                                        >
                                        <select
                                            id="available"
                                            class="block w-full rounded-lg border-slate-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm px-4 py-2 border"
                                        >
                                            <option value="true"
                                                >Tersedia</option
                                            >
                                            <option value="false"
                                                >Terjual</option
                                            >
                                        </select>
                                    </div>
                                </div>

                                <!-- Image Upload -->
                                <div>
                                    <label
                                        for="imageFile"
                                        class="block text-sm font-medium text-slate-700 mb-1"
                                        >Upload Gambar</label
                                    >
                                    <input
                                        type="file"
                                        id="imageFile"
                                        accept="image/*"
                                        class="block w-full text-sm text-slate-500
                                          file:mr-4 file:py-2 file:px-4
                                          file:rounded-l-lg file:border-0
                                          file:text-sm file:font-semibold
                                          file:bg-sky-50 file:text-sky-700
                                          hover:file:bg-sky-100
                                          border border-slate-300 rounded-lg shadow-sm"
                                    />
                                    <p class="mt-1 text-xs text-slate-500">
                                        Format: JPG, PNG, WebP (Max 5MB).
                                    </p>
                                </div>

                                <!-- Description -->
                                <div>
                                    <label
                                        for="description"
                                        class="block text-sm font-medium text-slate-700 mb-1"
                                        >Deskripsi</label
                                    >
                                    <textarea
                                        id="description"
                                        rows="3"
                                        placeholder="Deskripsi kondisi hewan..."
                                        class="block w-full rounded-lg border-slate-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm px-4 py-2 border"
                                    ></textarea>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div
                    class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse"
                >
                    <button
                        type="submit"
                        form="add-animal-form"
                        id="submit-btn"
                        class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-sky-600 text-base font-medium text-white hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 sm:ml-3 sm:w-auto sm:text-sm"
                    >
                        Simpan
                    </button>
                    <button
                        type="button"
                        id="close-modal"
                        class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm"
                    >
                        Batal
                    </button>
                </div>
            </div>
        </div>
    </div>
</AdminLayout>

<script src="./_index.ts"></script>
