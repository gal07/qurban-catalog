---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Login Admin - Qurban Berkah">
  <div
    class="min-h-screen flex items-center justify-center bg-slate-50 py-12 px-4 sm:px-6 lg:px-8"
  >
    <div
      class="max-w-md w-full space-y-8 bg-white p-8 rounded-2xl shadow-xl ring-1 ring-slate-900/5"
    >
      <div class="text-center">
        <h2 class="mt-6 text-3xl font-extrabold text-slate-900">Login Admin</h2>
        <p class="mt-2 text-sm text-slate-600">
          Masuk untuk mengelola katalog.
        </p>
      </div>

      <form id="login-form" class="mt-8 space-y-6">
        <div class="rounded-md shadow-sm -space-y-px">
          <div class="mb-4">
            <label
              for="email"
              class="block text-sm font-medium text-slate-700 mb-1">Email</label
            >
            <input
              id="email"
              name="email"
              type="email"
              autocomplete="email"
              required
              class="appearance-none relative block w-full px-3 py-3 border border-slate-300 placeholder-slate-500 text-slate-900 rounded-lg focus:outline-none focus:ring-sky-500 focus:border-sky-500 focus:z-10 sm:text-sm"
              placeholder="admin@example.com"
            />
          </div>
          <div>
            <label
              for="password"
              class="block text-sm font-medium text-slate-700 mb-1"
              >Password</label
            >
            <input
              id="password"
              name="password"
              type="password"
              autocomplete="current-password"
              required
              class="appearance-none relative block w-full px-3 py-3 border border-slate-300 placeholder-slate-500 text-slate-900 rounded-lg focus:outline-none focus:ring-sky-500 focus:border-sky-500 focus:z-10 sm:text-sm"
              placeholder="********"
            />
          </div>
        </div>

        <div id="error-message" class="hidden rounded-md bg-rose-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg
                class="h-5 w-5 text-rose-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-rose-800">Login Gagal</h3>
              <div class="mt-2 text-sm text-rose-700">
                <p>Periksa email dan password Anda.</p>
              </div>
            </div>
          </div>
        </div>

        <div>
          <button
            type="submit"
            class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 transition-colors shadow-lg shadow-sky-500/30"
          >
            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
              <svg
                class="h-5 w-5 text-sky-500 group-hover:text-sky-400 transition-colors"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                  clip-rule="evenodd"></path>
              </svg>
            </span>
            Masuk
          </button>
        </div>
      </form>
    </div>
  </div>
</Layout>

<script>
  import { auth } from "../../lib/firebase";
  import {
    signInWithEmailAndPassword,
    onAuthStateChanged,
  } from "firebase/auth";

  // Redirect if already logged in
  onAuthStateChanged(auth, (user) => {
    if (user) {
      window.location.href = "/admin/dashboard";
    }
  });

  const form = document.getElementById("login-form");
  const errorMsg = document.getElementById("error-message");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const email = (document.getElementById("email") as HTMLInputElement).value;
    const password = (document.getElementById("password") as HTMLInputElement)
      .value;
    const btn = form.querySelector("button");
    const btnText = btn?.querySelector("span")?.nextSibling; // Text node after span

    try {
      if (btn) {
        btn.disabled = true;
        // Keep the lock icon, just change text
        // Simple way: clear content and set loading state
        btn.innerHTML = "Memproses...";
      }
      errorMsg?.classList.add("hidden");

      await signInWithEmailAndPassword(auth, email, password);
      // Let auth state listener handle redirect
      // window.location.href = '/admin/dashboard';
    } catch (error: any) {
      console.error(error);
      if (errorMsg) {
        errorMsg.classList.remove("hidden");
        errorMsg.querySelector("p")!.textContent =
          "Login gagal. Periksa email dan password.";
      }

      if (btn) {
        btn.innerHTML = `
            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
              <svg class="h-5 w-5 text-sky-500 group-hover:text-sky-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
              </svg>
            </span>
            Masuk
          `;
        btn.disabled = false;
      }
    }
  });
</script>
